                                var draggableId = gdo.net.app["PresentationTool"].node[gdo.net.getNodeId(ui.draggable.parent().attr('col'), ui.draggable.parent().attr('row'))].sectionId;
                                gdo.net.app["PresentationTool"].section[draggableId].src = temp;

