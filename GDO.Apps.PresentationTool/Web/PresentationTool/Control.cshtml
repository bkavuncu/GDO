        });

        $("#save_slide").click(function () {
            var gdo = parent.gdo;
            gdo.net.app["PresentationTool"].saveSlideFile();
        });


        artyom.addCommands([
            {
                indexes: ["Hello there"],
                action: function (i) {
                    artyom.say("Hey there !");
                    artyom.say("You could say following commands");
                    gdo.net.app["PresentationTool"].server.updateVoiceInfo(gdo.controlId, "Hello there! You could say following commands: Next, preivous, load and play", 1);
                }
            },
