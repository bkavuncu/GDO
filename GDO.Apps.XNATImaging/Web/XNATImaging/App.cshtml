@{
    Layout = null;
}

<!DOCTYPE html>
<html style="overflow: hidden">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>XNAT Imaging Project</title>
    <link href="../../Bootstrap/bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href='https://fonts.googleapis.com/css?family=Roboto:500,300,700,400' rel='stylesheet' type='text/css'>
    <link href="../../Scripts/XNATImaging/css/main.css" rel="stylesheet" />
</head>
<body>
<div id="main" class="container-fluid">
    <div class="heading">
        <h3> </h3>
    </div>
    <div class="row">
        <div id="dicomImage"
             class="col-xs-12 col-md-9"
             update-image
             mouse-wheel-up=""
             mouse-wheel-down=""
             mouse-click=""
             class="cornerstone-enabled-image"
             oncontextmenu="return false"
             unselectable='off'
             onselectstart='return false;'
             onmousedown='return false;'>

            <div id="mrtopleft">
                <p>Optimise ID</p>
            </div>
            <div id="mrtopright">
                Hospital
            </div>
            <div id="mrbottomright">
                <div id="frameRate"></div>
                <div id="zoomText">
                    <p>Zoom: 2.0x</p>
                </div>
                <div id="sliceText">
                    <p>Image: </p>
                </div>
            </div>
            <div id="mrbottomleft">
                <p>WW/WC: </p>
            </div>
        </div>
        <div id="dicomTopThumb" class="col-xs-6 col-md-3">
            <img class="img-thumbnail" src="../../Data/XNATImaging/topThumb.png" height="400" width="420"/>
        </div>
        <div id="dicomBottomThumb" class="col-xs-6 col-md-3">
            <img class="img-thumbnail" src="../../Data/XNATImaging/bottomThumb.png" height="400" width="420"/>
        </div>
    </div>
</div>

    <script src="../../Scripts/jquery-2.1.4.min.js"></script>
    <script src="../../Scripts/jquery.signalR-2.2.0.min.js"></script>

    <script src="../../Scripts/XNATImaging/angular.min.js"></script>
    <script src="../../Scripts/XNATImaging/underscore.js"></script>
    <script src="../../Scripts/XNATImaging/cornerstone.js"></script>
    <script src="../../Scripts/XNATImaging/cornerstoneMath.js"></script>
    <script src="../../Scripts/XNATImaging/cornerstone-tools.js"></script>
    <script src="../../Scripts/XNATImaging/dicomParser.js"></script>
    <script src="../../Scripts/XNATImaging/jpx.js"></script>
    <script src="../../Scripts/XNATImaging/cornerstoneWADOImageLoader.js"></script>

    <script>
        $(function () {
            $(document).ready(function () {
                var gdo = parent.gdo;
                gdo.net.app["XNATImaging"].initClient();
            });
        });
    </script>
