@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <link rel="stylesheet" href="../../Scripts/ShanghaiMetro/ol.css" type="text/css">
    <title></title>
    <style>
        body {
            background: #000;
            color: #FFF;
            font-family: helvetica;
            font-size: 350px;
        }

        .unselectable {
            -moz-user-select: -moz-none;
            -khtml-user-select: none;
            -webkit-user-select: none;
            -o-user-select: none;
            user-select: none;
        }
        .map:-moz-full-screen {
            height: 100%;
        }

        .map:-webkit-full-screen {
            height: 100%;
        }

        .map:-ms-fullscreen {
            height: 100%;
        }

        .map:full-screen {
            height: 100%;
        }

        .ol-rotate {
            top: 3em;
        }
        .map {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            border: 0 none;
            z-index: -1;
        }
        div.olMapViewport {
                        position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            border: 0 none;
            z-index: -1;
        }

         #map {position:absolute;z-index:0}
        .popup {position:absolute;z-index:2}
        #timelabel {
            position: absolute;
            top: 170px;
            left: 170px;
            width: 1070px;
            height: 400px;
            border: 0 none;
            z-index: 1000;
            background: #333;
            color: #FFF;
            font-family: helvetica;
            visibility: hidden;
        }
        .timelabel {
            position: absolute;
            top: 170px;
            left: 170px;
            width: 1070px;
            height: 400px;
            border: 0 none;
            z-index: 1000;
            background: #333;
            color: #FFF;
            font-family: helvetica;
            visibility: hidden;
        }
        .datalabel {
            position: absolute;
            top: 170px;
            right: 170px;
            width: 1070px;
            height: 400px;
            border: 0 none;
            z-index: 1000;
            background: #333;
            color: #FFF;
            font-family: helvetica;
            visibility: hidden;
        }
    </style>
</head>
<body unselectable="on" class="unselectable">
    <script src="../../Scripts/jquery-2.1.4.min.js"></script>
    <script src="../../Scripts/jquery.signalR-2.2.0.min.js"></script>
    <script src="../../Scripts/jquery.csv-0.71.min.js"></script>
        <script>
            $(function () {
                $(document).ready(function () {
                    var gdo = parent.gdo;
                    gdo.net.app["ShanghaiMetro"].initClient(gdo.clientId);
                });
            });
    </script>
    <div class="container-fluid map" style="z-index:1">
        <div class="row-fluid map"  style="z-index:1">
            <div class="span12 map"  style="z-index:1">
                <div id="map" class="map" style="z-index:1"></div>
            </div>
        </div>
    </div>
    <div><div id="timelabel" class="timelabel" style="z-index: 1000"></div></div>
    <div><div id="datalabel" class="datalabel" style="z-index:1000"></div></div>
    <script type="text/javascript" src="../../Scripts/ShanghaiMetro/ol3/ol.js"></script>
    <script src="../../Scripts/ShanghaiMetro/Cesium/Cesium.js"></script>
    <script src="../../Scripts/ShanghaiMetro/ol3cesium.js"></script>
</body>
</html>
