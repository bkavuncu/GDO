@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <link rel="stylesheet" href="../../Scripts/Maps/ol.css" type="text/css">
    <title></title>
    <style>
        body {
            background: #000;
            color: #FFF;
            font-family: helvetica;
            font-size: 70%;
        }

        .unselectable {
            -moz-user-select: -moz-none;
            -khtml-user-select: none;
            -webkit-user-select: none;
            -o-user-select: none;
            user-select: none;
        }
        .map:-moz-full-screen {
            height: 100%;
        }

        .map:-webkit-full-screen {
            height: 100%;
        }

        .map:-ms-fullscreen {
            height: 100%;
        }
        
        .ol-rotate {
            top: 3em;
        }
        .map {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            border: 0 none;
            z-index: 9;
        }
        .timelabel {
            position: absolute;
            top: 140px;
            left: 140px;
            width: 550px;
            height: 230px;
            border: 0 none;
            z-index: 1000;
            background: #222;
            color: #FFF;
            font-family: helvetica;
            font-size: 210px;
            padding: 20px;
            visibility: hidden;
        }
        .datalabel {
            position: absolute;
            top: 140px;
            right: 140px;
            width: 840px;
            height: 240px;
            border: 0 none;
            z-index: 1000;
            background: #222;
            color: #FFF;
            font-family: helvetica;
            font-size: 100px;
            padding: 20px;
            visibility: hidden;
        }
    </style>
</head>
<body unselectable="on" class="unselectable">
    <script src="../../Scripts/jquery-2.1.4.min.js"></script>
    <script src="../../Scripts/jquery.signalR-2.2.0.min.js"></script>
        <script>
            $(function () {
                $(document).ready(function () {
                    var gdo = parent.gdo;
                    gdo.net.app["Maps"].initClient(gdo.clientId);
                });
            });
    </script>
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12">
                <div id="map" class="map"></div>
            </div>
        </div>
    </div>
    <div><div id="timelabel" class="timelabel" style="z-index: 1000"></div></div>
    <div><div id="datalabel" class="datalabel" style="z-index:1000"></div></div>
    <script type="text/javascript" src="../../Scripts/Maps/ol3/ol.js"></script>
    <script src="../../Scripts/Maps/Cesium/Cesium.js"></script>
    <script src="../../Scripts/Maps/ol3cesium.js"></script>
</body>
</html>
