@using System.IO
@using System.Web.Helpers
@using GDO.Core
@{
    Layout = null;
}

<!DOCTYPE html>

<html style="overflow: hidden">
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <style>
        body {
            background: #000;
            color: #FFF;
            font-family: helvetica;
            font-size: 70%;
        }
        #CurrentData {
            background: #FFF;
            color: #111;
            font-family: helvetica;
            font-size: 72pt;
        }

        .unselectable {
            -moz-user-select: -moz-none;
            -khtml-user-select: none;
            -webkit-user-select: none;
            -o-user-select: none;
            user-select: none;
        }

        #image_tile {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            border: 0 none;
            z-index: 9;
        }
    </style>
</head>
<body unselectable="on" class="unselectable">
    <script src="../../Scripts/jquery-1.6.4.min.js"></script>
    <script src="../../Scripts/jquery.signalR-2.2.0.min.js"></script>
    <script>
        $(function () {          
            var gdo = parent.gdo;
            gdo.consoleOut('.GDOTemps', 1, 'Init Client');
            gdo.net.app["GDOTemps"].initClient();
            $("#tempDisplay").width($(window).width());
            $("#tempDisplay").height($(window).height());
        });
    </script>
    <form id="form1" runat="server"></form>
<div>
    <p id="CurrentData"> </p>  
</div>
</body>
</html>
