    <script>
        $(function () {

            /*
            window.onerror = function() {
                location.reload();
            }
            */

            var gdo = parent.gdo;

            $("#BitCoin_digit_button").click(function (){
                var gdo = parent.gdo;
                gdo.net.app["BitCoins"].server.findDigits(gdo.controlId, $("#BitCoin_digit").val());
            });

            $("#BitCoin_digit").keypress(function (e) {
                if (e.keyCode == 13) {
                    $("#BitCoin_digit_button").click();
                }
            });

            $("#fit_mode").click(function() {
                var gdo = parent.gdo;
                if (gdo.net.app["BitCoins"].control_status == 1 &&　$('#thumbnail_control > img').attr("src") != "") {
                    //gdo.net.app["BitCoins"].display_mode = 1 - gdo.net.app["BitCoins"].display_mode;
                    gdo.consoleOut('.BitCoins', 1, 'Control: ' + gdo.controlId + ', Update display mode: FIT MODE');
                    //gdo.net.app["BitCoins"].server.setDisplayMode(gdo.controlId, gdo.net.app["BitCoins"].display_mode);
                    //gdo.net.app["BitCoins"].setDisplayModeSelect();
                    setThumbNailDisplayMode(0);
                }
            });

            $("#fill_mode").click(function() {
                var gdo = parent.gdo;
                if (gdo.net.app["BitCoins"].control_status == 1 &&　$('#thumbnail_control > img').attr("src") != "") {
                    //gdo.net.app["BitCoins"].display_mode = 1 - gdo.net.app["BitCoins"].display_mode;
                    gdo.consoleOut('.BitCoins', 1, 'Control: ' + gdo.controlId + ', Update display mode: FILL MODE');
                    //gdo.net.app["BitCoins"].server.setDisplayMode(gdo.controlId, gdo.net.app["BitCoins"].display_mode);
                    //gdo.net.app["BitCoins"].setDisplayModeSelect();
                    setThumbNailDisplayMode(1);
                }
            });

            $("#active_control").click(function() {
                if ($('#thumbnail_control > img').attr("src") != "") {
                    var gdo = parent.gdo;
                    gdo.net.app["BitCoins"].control_status = 1;
                    updateControlButtonBackground();
                    //gdo.net.app["BitCoins"].server.setDisplayMode(gdo.controlId, gdo.net.app["BitCoins"].display_mode);
                    //gdo.net.app["BitCoins"].setDisplayModeSelect();
                }
            });

            $("#disable_control").click(function () {
                if ($('#thumbnail_control > img').attr("src") != "") {
                    var gdo = parent.gdo;
                    gdo.net.app["BitCoins"].control_status = 0;
                    updateControlButtonBackground();
                }
            });

            $("#rotate_control").click(function () {
                var gdo = parent.gdo;
                if (gdo.net.app["BitCoins"].control_status == 1 &&　$('#thumbnail_control > img').attr("src") != "") {
                    $('#thumbnail_control > img').cropper('rotate', 90);
                    updateThumbNailBitCoinInfo($('#thumbnail_control > img'));
                }
            });

            $('#thumbnail_control').width($(window).width() / 1.2);
            $('#thumbnail_control').height($(window).width() / 1.8);

            $("body").keypress(function(e) {
                var gdo = parent.gdo;
                if (gdo.net.app["BitCoins"].control_status == 1) {
                    var canvasData = $('#thumbnail_control > img').cropper('getCanvasData');
                    if(e.keyCode == 97) { // A left
                        //alert("left");
                        $('#thumbnail_control > img').cropper('setCanvasData', {
                            left: canvasData.left - 1
                        });
                        updateThumbNailBitCoinInfo($('#thumbnail_control > img'));
                    } else if (e.keyCode == 115) { // S down
                        $('#thumbnail_control > img').cropper('setCanvasData', {
                            top: canvasData.top + 1
                        });
                        updateThumbNailBitCoinInfo($('#thumbnail_control > img'));
                    } else if (e.keyCode == 100) { // D right
                        $('#thumbnail_control > img').cropper('setCanvasData', {
                            left: canvasData.left + 1
                        });
                        updateThumbNailBitCoinInfo($('#thumbnail_control > img'));
                    } else if (e.keyCode == 119) { // W up
                        $('#thumbnail_control > img').cropper('setCanvasData', {
                            top: canvasData.top - 1
                        });
                        updateThumbNailBitCoinInfo($('#thumbnail_control > img'));
                    }
                } 
            });
            
            gdo.net.app["BitCoins"].initControl();
            //updateThumbNailBitCoinInfo($('#thumbnail_control > img'));
            updateControlButtonBackground();
        });

        function updateControlButtonBackground() {
            var gdo = parent.gdo;
            if (gdo.net.app["BitCoins"].control_status == 0) {
                $("#active_control").css("background", "darkgreen");
                $("#disable_control").css("background", "#222");
                $("#rotate_control").css("background", "#222");
                $("#fit_mode").css("background", "#222");
                $("#fill_mode").css("background", "#222");
            } else if (gdo.net.app["BitCoins"].control_status == 1) {
                $("#active_control").css("background", "#222");
                $("#disable_control").css("background", "darkred");
                $("#rotate_control").css("background", "darkgreen");
                $("#fit_mode").css("background", "darkgreen");
                $("#fill_mode").css("background", "darkgreen");
            }
            updateThumbNailBitCoinInfo($('#thumbnail_control > img'));
        }

        function initializeCropper() {
            var gdo = parent.gdo;

            $('#thumbnail_control > img').cropper({
                aspectRatio: 1920 / 1080,
                autoCropArea: 0.65,
                strict: false,
                guides: false,
                highlight: false,
                dragCrop: false,
                cropBoxMovable: false,
                cropBoxResizable: false
            });

            $('#thumbnail_control > img').on('cropmove.cropper', function (e) {
                var gdo = parent.gdo;
                if (gdo.net.app["BitCoins"].control_status == 0) {
                    e.preventDefault();
                } else if (gdo.net.app["BitCoins"].control_status == 1) {
                    updateThumbNailBitCoinInfo($(this));
                }
            });

            $('#thumbnail_control > img').on('zoom.cropper', function (e) {
                var gdo = parent.gdo;
                if (gdo.net.app["BitCoins"].control_status == 0) {
                    e.preventDefault();
                } else if (gdo.net.app["BitCoins"].control_status == 1) {
                    updateThumbNailBitCoinInfo($(this));
                }
            });

            gdo.net.app["BitCoins"].server.requestSectionSize(gdo.controlId);
            gdo.net.app["BitCoins"].server.requestThumbNailBitCoinInfo(gdo.controlId);
        }

        function updateThumbNailBitCoinInfo(object) {
            var gdo = parent.gdo;
            if (gdo.net.app["BitCoins"].control_status == 1 &&　$('#thumbnail_control > img').attr("src") != "") {
                var BitCoinData = object.cropper('getBitCoinData');
                var cropboxData = object.cropper('getCropBoxData');
                var canvasData = object.cropper('getCanvasData');
                var data = {}
                data.BitCoinData = {};
                data.BitCoinData.aspectRatio = cropboxData.width / cropboxData.height; //actually this is cropbox width/height ratio
                if (BitCoinData.rotate != null) {
                    data.BitCoinData.rotate = BitCoinData.rotate % 360;
                } else {
                    data.BitCoinData.rotate = 0;
                }
                data.BitCoinData.naturalWidth = BitCoinData.naturalWidth;
                data.BitCoinData.naturalHeight = BitCoinData.naturalHeight;
                data.BitCoinData.left = BitCoinData.left;
                data.BitCoinData.top = BitCoinData.top;
                data.BitCoinData.width = BitCoinData.width;
                data.BitCoinData.height = BitCoinData.height;
                data.cropboxData = {};
                data.cropboxData.left = cropboxData.left;
                data.cropboxData.top = cropboxData.top;
                data.cropboxData.width = cropboxData.width;
                data.cropboxData.height = cropboxData.height;
                data.canvasData = {};
                data.canvasData.left = canvasData.left;
                data.canvasData.top = canvasData.top;
                data.canvasData.width = canvasData.width;
                data.canvasData.height = canvasData.height;
                gdo.net.app["BitCoins"].server.setThumbNailBitCoinInfo(gdo.controlId, JSON.stringify(data));
                $("#canvas_data_width").html(data.canvasData.width);
                $("#canvas_data_height").html(data.canvasData.height);
                $("#canvas_data_left").html(data.canvasData.left);
                $("#canvas_data_top").html(data.canvasData.top);
                $("#cropbox_data_width").html(data.cropboxData.width);
                $("#cropbox_data_height").html(data.cropboxData.height);
                $("#cropbox_data_left").html(data.cropboxData.left);
                $("#cropbox_data_top").html(data.cropboxData.top);
                $("#BitCoin_data_aspect_ratio").html(data.BitCoinData.aspectRatio);
                $("#BitCoin_data_rotate").html(data.BitCoinData.rotate);
            }
        }

        function setThumbNailBitCoinInfo(BitCoinJson) {
            if ($('#thumbnail_control > img').attr("src") != "") {
                var gdo = parent.gdo;
                $("#thumbnail_control > img").cropper('setAspectRatio', BitCoinJson.BitCoinData.aspectRatio);
                $("#thumbnail_control > img").cropper('setCropBoxData', {
                    left: BitCoinJson.cropboxData.left,
                    top: BitCoinJson.cropboxData.top,
                    width: BitCoinJson.cropboxData.width,
                    height: BitCoinJson.cropboxData.height
                });
                //gdo.consoleOut('.BitCoins', 1, 'Set thumbnail BitCoin rotate configuration');
                $("#thumbnail_control > img").cropper('rotate', BitCoinJson.BitCoinData.rotate);
                $("#thumbnail_control > img").cropper('setCanvasData', {
                    left: BitCoinJson.canvasData.left,
                    top: BitCoinJson.canvasData.top,
                    width: BitCoinJson.canvasData.width,
                    height: BitCoinJson.canvasData.height
                });
            }
        }

        function getSectionSize(section_width, section_height) {
            if ($('#thumbnail_control > img').attr("src") != "") {
                var gdo = parent.gdo;
                gdo.consoleOut('.BitCoins', 1, 'Set aspectRatio configuration');
                $("#thumbnail_control > img").cropper('setAspectRatio', section_width/section_height);
            }
        }

        function setThumbNailDisplayMode(display_mode) {
            if ($('#thumbnail_control > img').attr("src") != "") {
                var gdo = parent.gdo;
                var cropboxData = $("#thumbnail_control > img").cropper('getCropBoxData');
                var canvasData = $("#thumbnail_control > img").cropper('getCanvasData');
                var scalewidth = cropboxData.width / canvasData.width;
                var scaleheight = cropboxData.height / canvasData.height;
                if (scalewidth > scaleheight && display_mode == 1 ||
                    scalewidth < scaleheight && display_mode == 0) {
                    $("#thumbnail_control > img").cropper('setCanvasData', {
                        left: cropboxData.left,
                        top: cropboxData.top,
                        width: cropboxData.width
                    });
                } else {
                    $("#thumbnail_control > img").cropper('setCanvasData', {
                        left: cropboxData.left,
                        top: cropboxData.top,
                        height: cropboxData.height
                    });
                }
                updateThumbNailBitCoinInfo($('#thumbnail_control > img'));
            }
        }

    </script>
